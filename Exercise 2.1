import java.util.Scanner;

public class App {
    public static void main(String[] args) throws Exception {
        System.out.println("Enter a degree in Celsius:");

        // Creating scanner for class
        Scanner input = new Scanner(System.in);
        
        // Grabbing input and saving it to a double variable
        double celcius = input.nextDouble();

        // math conversion of tempeture
        double fheit = (9.0/5) * celcius + 32;

        //printing out the end result to terminal
        System.out.println(celcius + " degrees celsius is " + fheit + " degrees Fahrenheit");

    }
}


