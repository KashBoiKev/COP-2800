import java.util.Scanner;

public class App {

    // Program to call , collect, and execute 
    public static void main(String[] args){
        Scanner input = new Scanner(System.in);
        System.out.println("Please enter an integer");
        long number = input.nextLong();
        
        System.out.println("The sum of the digits is: " + sumInt(number));

    }

    // program written to find the sum of the inputed integer
    public static long sumInt(long n) {

        long sum = 0;

        while (n > 0) {
            sum += (n % 10);
            n /= 10;

        }
           
        return sum;
        

    }


}

