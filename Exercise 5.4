public class App {
    public static void main(String[] args) throws Exception {
        

        // crating variable to input into loop
        int i = 1;
        int miles = i;

        System.out.println("Miles: " + "  " + "Kilometers:");

        // loop to keep the program running until specifications met
        while (miles <= 10){    
            System.out.println(miles + "         " + (miles*1.609) );
            miles++;

        }

    
    }
}

